
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Note {
  id String @id @default(uuid())
  title String
  body String
  author User @relation(fields: [authorId], references: [id])
  authorId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User{
     id String @id @default(uuid())
     name String
     email String @unique
     password String
     notes Note[]
     createdAt DateTime @default(now())
     updatedAt DateTime @updatedAt
}
